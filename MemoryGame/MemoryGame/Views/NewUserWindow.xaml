<Window x:Class="MemoryGame.Views.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New User" Height="400" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Zona pentru introducerea numelui -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Label Content="User Name:" VerticalAlignment="Center" />
            <TextBox x:Name="txtUserName" Width="200" Margin="5"/>
        </StackPanel>
        <!-- Zona pentru selectarea imaginii -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="imgSelected" Width="150" Height="150" Stretch="Uniform" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnLeft" Content="left" Width="50" Click="LeftButton_Click" Margin="5"/>
                <Button x:Name="btnRight" Content="right" Width="50" Click="RightButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
        <!-- Zona cu butoane OK și Cancel -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
